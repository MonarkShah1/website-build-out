---
interface Props {
  title: string;
  description?: string;
  primaryAction?: {
    text: string;
    href: string;
  };
  secondaryAction?: {
    text: string;
    href: string;
  };
}

const { title, description, primaryAction, secondaryAction } = Astro.props;
---

<section class="cta-section">
  <div class="container">
    <div class="cta-content">
      <h2>{title}</h2>
      {description && <p>{description}</p>}
      {(primaryAction || secondaryAction) && (
        <div class="cta-actions">
          {primaryAction && (
            <a href={primaryAction.href} class="btn btn-primary btn-lg">
              {primaryAction.text}
            </a>
          )}
          {secondaryAction && (
            <a href={secondaryAction.href} class="btn btn-secondary btn-lg">
              {secondaryAction.text}
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .cta-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, var(--color-primary-600) 0%, var(--color-primary-700) 100%);
    color: white;
    text-align: center;
  }
  
  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .cta-content p {
    font-size: 1.25rem;
    opacity: 0.95;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .cta-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  @media (max-width: 640px) {
    .cta-content h2 {
      font-size: 2rem;
    }
    
    .cta-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .cta-actions .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>